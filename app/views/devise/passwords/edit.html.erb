<div class="d-flex align-items-center justify-content-center">
    <h1>Estágio Curricular Supervisionado</h1>
</div>
<div class="d-flex align-items-center justify-content-center">
    <%= image_tag("DirlicOficial.png", size: "220x220", :alt => "logo estágio curricular supervisonado") %>
</div>
<br>

<div class="container">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="d-flex align-items-center justify-content-center">
            <div class="formulario_login col-md-5 offset-md-2">
                <div class="imagem_topo">
                    <%= image_tag 'user.png', alt: 'user' %>
                </div>

                <div> <h4>Alterar senha</h4></div>

                <div class="form-group row">
                    <div class="input-group mx-auto">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= image_tag 'lock_login.png', alt: 'email' %></span>
                        </div>
                        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'Nova senha com, no mínimo, ' + @minimum_password_length.to_s + ' caracteres', class: "form-control" %>
                    </div>
                </div>
                <br>

                <div class="form-group row">
                    <div class="input-group mx-auto">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><%= image_tag 'lock_login.png', alt: 'email' %></span>
                        </div>
                        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmar nova senha', class: "form-control" %>
                    </div>
                </div>
                <br>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-center">
            <div class="botoes_inferior">
                <%= f.submit "Mudar minha senha", class: 'btn btn-danger btn-block' %>
                <%= link_to "Voltar", welcome_path, :class => "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
</div>
