<div class="d-flex align-items-center justify-content-center">
    <h1>Estágio Curricular Supervisionado</h1>
</div>
<div class="d-flex align-items-center justify-content-center">
    <%= image_tag("DirlicOficial.png", size: "220x220", :alt => "logo estágio curricular supervisonado") -%>   
</div>

<div class="container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <br><br><br>

         
          <div class="card-header">

      <div class="d-flex align-items-center justify-content-center">
          <div class="formulario_login col-md-4 col-offset-2 ">
            <div class="imagem_topo">
              <%= image_tag 'user.png', alt: 'user' %>
            </div>

            <br>
      
      
            <div class="form-group row">
              <div class="input-group mx-auto">
                <div class="input-group-prepend">
                  <span class="input-group-text"><%= image_tag 'user_login.png', alt: 'email' %></span>
                </div>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: "form-control" %>
              </div>
            </div>  

            <br>
      
            <div class="form-group row">
              <div class="input-group mx-auto">
                <div class="input-group-prepend">
                  <span class="input-group-text"><%= image_tag 'lock_login.png', alt: 'lock' %></span>
                </div>
                <%= f.password_field :password, autocomplete: "Senha", placeholder: 'Senha', class: "form-control" %>
              </div>
            </div>   
      
            <br>

            <div class="d-flex align-items-center justify-content-center">
            <div class="botoes_inferior">
              <%= f.submit "Entrar", class: 'btn btn-success btn-block' %>
              <%= link_to "Voltar", welcome_path, :class => "btn btn-primary btn-block" %>
              <br><br>
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Criar uma conta", new_registration_path(resource_name) %><br />
              <% end %>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
              <% end %>
            </div>
            </div>
      
           </div>
        <% end %>
      
      </div>
      </div>
      </div>
      </div>  
